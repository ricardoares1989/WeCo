
<BackgroundColor@Widget>
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<BackgroundButton@Button+BackgroundColor>
    background_color: 247/256, 149/256, 137/256, .4

<HeadTableWidget>
    background_color: 0,0,0,0
    size_hint_y: None
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height


<CellTableWidget>
    background_color: 0,0,0,0
    height: 10
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height


<WorkBoxWidget>:
    id: WorkBox
    wid_weights: weights
    canvas.before:
        Color:
            rgba: [1,1,1,0]
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            spacing: 20
            padding: 50
            Label:
                id: weights
                size_hint: [1,.8]
                text: WorkBox.weight_read
                font_size: '60sp'
                color: WorkBox.color_text 
                canvas.before:
                    Color: 
                        rgba: 244/255, 211/255, 94/255, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            spacing: 1
            padding: [80,0,80,0]
            BackgroundLabel:
                text: "Seleccionar producto."
                size_hint_y: None
                height: 40
                background_color: 8/255, 61/255, 119/255, 1
            ScrollView:
                GridLayout:
                    padding: [20,0,20,0]
                    id: container_buttons
                    size_hint_y: None
                    cols: 1
                    row_default_height: 30
                    height: 30


    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: [30,30,30,30]
            spacing: 20
            TableRegisterWidget:
                id: table_register                  

        BoxLayout:
            size_hint: [1,0.3]
            padding: [30,30,30,30]
            spacing: 20
            BackgroundButton:
                id: save_data
                text: 'Guardar'
                font_size: '30sp'
                on_press: [root.product_selected(), table_register.update_table()]
            BackgroundButton:
                id: stats_button
                text: 'Estadisticas'
                font_size: '30sp'
                on_press: print(table_register.children)



